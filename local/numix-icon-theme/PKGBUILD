
pkgname=numix-icon-theme
pkgver=21.04.14
pkgrel=1
pkgdesc='Base icon theme from the Numix project'
arch=('any')
url='https://github.com/numixproject/numix-icon-theme'
license=('GPL3')
depends=('gtk-update-icon-cache')
makedepends=('git')
provides=('numix-light-icon-theme')
conflicts=('numix-light-icon-theme')
options=('!strip')
source=("git+https://github.com/numixproject/numix-icon-theme.git#tag=$pkgver")
sha256sums=('SKIP')


package() {
  cd numix-icon-theme

  install -dm 755 "$pkgdir"/usr/share/icons
  cp -dr --no-preserve='ownership' Numix{,-Light} "$pkgdir"/usr/share/icons/
}

