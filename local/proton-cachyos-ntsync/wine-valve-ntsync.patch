+{
+    LONG refcount;
+    int fd;
+    enum inproc_sync_type type;
+    unsigned int access;
+    BOOL closed;
+    /* handle to the underlying in-process sync object, stored as obj_handle_t
+     * to save space */
+    obj_handle_t handle;
+};
