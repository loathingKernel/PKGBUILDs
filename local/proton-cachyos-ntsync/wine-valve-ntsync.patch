+     * access the cache anymore */
+    HANDLE handle = wine_server_ptr_handle( cache->handle );
+    int fd = cache->fd;
+    LONG refcount = InterlockedDecrement( &cache->refcount );
+
+    assert( refcount >= 0 );
+
+    if (!refcount)
