
pkgname=numix-square-icon-theme
pkgver=20.09.19
pkgrel=1
pkgdesc='Square icon theme from the Numix project'
arch=('any')
url='https://github.com/numixproject/numix-icon-theme-square'
license=('GPL3')
depends=('numix-icon-theme')
makedepends=('git')
options=('!strip')
source=("$pkgname::git+https://github.com/numixproject/numix-icon-theme-square.git#tag=$pkgver")
sha256sums=('SKIP')


package() {
  cd "$pkgname"
  install -dm 755 "$pkgdir"/usr/share/icons
  cp -dr --no-preserve='ownership' Numix-Square{,-Light} "$pkgdir"/usr/share/icons/
}
